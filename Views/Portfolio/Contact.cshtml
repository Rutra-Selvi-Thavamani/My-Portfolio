<h3><b>Contact Form</b></h3>
@using (Html.BeginForm("Contact", "Portfolio", FormMethod.Get))
{
    <table>
        <tr>
            <td>Enter ID:</td>
            <td>@Html.TextBox("Id")</td>
        </tr>
        <tr>
            <td>Enter Name:</td>
            <td>@Html.TextBox("Name")</td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Submit"/></td>
        </tr>
    </table>
}
<h4 style="color:aquamarine">
    ID:@ViewBag.Id<br/>
    Name:@ViewBag.Name<br/>
</h4>


