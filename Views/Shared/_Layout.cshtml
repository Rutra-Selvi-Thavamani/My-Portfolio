<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Portfolio Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
  
    <script src="~/Scripts/Basic Details.js"></script>

</head>
<body class="bg-success">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Rutra Thavamani Selvi", "Index", "Portfolio", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", ")</li>*@
                    <li>@Html.ActionLink("Education", "Education", "Portfolio")</li>
                    <li>@Html.ActionLink("Skills", "Skills", "Portfolio")</li>
                    <li>@Html.ActionLink("Experience", "Experience", "Portfolio")</li>
                    <li>@Html.ActionLink("Hobbies", "Hobbies", "Portfolio")</li>
                    <li>@Html.ActionLink("Register", "Register", "Portfolio")</li>
                    <li>@Html.ActionLink("BasicDetails", "BasicDetails", "Portfolio")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" >
        @RenderBody()
        <hr />
        <footer class="body">
            <p>&copy; @DateTime.Now.Year - My Portfolio Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Javascript")

    @RenderSection("scripts", required: false)
</body>
</html>
